<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_persional_nformation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_action_bar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/margin_layout_main"
    android:paddingRight="@dimen/margin_layout_main"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".v.activity.PersionalInformation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="11">
        <!-- How many daily cigarettes did you smoke?-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_layout"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="How many daily cigarettes did you smoke?"
                android:textAlignment="center"
                android:textColor="@color/write"
                android:textSize="@dimen/text_size_title" />

            <EditText
                android:id="@+id/txtSoDieuNgay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt1"
                android:background="@color/write"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="20"
                android:maxLength="3"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/text_value"
                android:textSize="@dimen/text_size_value"
                android:textStyle="bold" />

        </LinearLayout>
        <!-- How many cigarettes had you cigarettes pack?-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_layout"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="How many cigarettes had you cigarettes pack?"
                android:textAlignment="center"
                android:textColor="@color/write"
                android:textSize="@dimen/text_size_title" />

            <EditText
                android:id="@+id/txtSoDieuTrongMotGoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt1"
                android:background="@color/write"
                android:paddingBottom="10dp"
                android:maxLength="3"
                android:inputType="number"
                android:paddingTop="10dp"
                android:text="20"
                android:textAlignment="center"
                android:textColor="@color/text_value"
                android:textSize="@dimen/text_size_value"
                android:textStyle="bold" />

        </LinearLayout>
        <!-- what's the price of your cigarettes pack?-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_layout"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="What's the price of your cigarettes pack?"
                android:textAlignment="center"
                android:textColor="@color/write"
                android:textSize="@dimen/text_size_title" />

            <EditText
                android:id="@+id/txtGiaMotGoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt1"
                android:background="@color/write"
                android:maxLength="8"
                android:inputType="numberDecimal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="20.000"
                android:textAlignment="center"
                android:textColor="@color/text_value"
                android:textSize="@dimen/text_size_value"
                android:textStyle="bold" />

        </LinearLayout>
        <!-- when did you quit smoking?-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_layout"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ngayBoHut"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="When did you quit smoking?"
                android:textAlignment="center"
                android:textColor="@color/write"
                android:textSize="@dimen/text_size_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txtNgay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/write"
                        android:onClick="onDateClicked"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="10-11-2016"
                        android:textAlignment="center"
                        android:textColor="@color/text_value"
                        android:textSize="@dimen/text_size_value"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txtGio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/write"
                        android:onClick="onTimeClicked"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="10:30"
                        android:textAlignment="center"
                        android:textColor="@color/text_value"
                        android:textSize="@dimen/text_size_value"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <!-- what's your gender?-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_layout"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="What's your gender?"
                android:textAlignment="center"
                android:textColor="@color/write"
                android:textSize="@dimen/text_size_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txtMale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="onMaleClicked"
                        android:background="@color/write"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="Male"
                        android:textAlignment="center"
                        android:textColor="@color/text_value"
                        android:textSize="@dimen/text_size_value"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txtFemale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="onFeMaleClicked"
                        android:background="@color/write"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="Female"
                        android:textAlignment="center"
                        android:textColor="@color/text_diable"
                        android:textSize="@dimen/text_size_value"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
