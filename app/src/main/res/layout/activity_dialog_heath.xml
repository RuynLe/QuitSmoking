<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="325dp"
    android:background="@color/no_opacity"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="250dp"
        android:gravity="center"
        android:layout_marginTop="75dp"
        android:background="@drawable/botron">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="250"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="75">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="110">
                <TextView
                    android:id="@+id/textDiaglog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="65"
                android:background="@drawable/botron2">

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp">

            <vn.outsourcing.quitsmoking.m.DonutProgress
                android:id="@+id/prgDiaglog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout_centerHorizontal="true"
                app:donut_circle_starting_degree="269"
                app:donut_finished_color="@color/write"
                app:donut_finished_stroke_width="@dimen/finished_stroke_width"
                app:donut_progress="0"
                app:donut_suffix_text=""
                app:donut_text="0%"
                app:donut_text_color="@color/write"
                app:donut_background_color="@color/cirlce_color_finish"
                app:donut_text_size="30dp"
                app:donut_unfinished_color="@color/cirlce_color_unfinish"
                app:donut_unfinished_stroke_width="@dimen/unfinished_stroke_width" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
